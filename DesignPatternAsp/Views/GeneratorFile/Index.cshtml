<div class="row">
    <div class="col-8 offset-2">
        <div class="form-group">
            <select id="optionFile" class="form-control">
                <option value="1">Json</option>
                <option value="2">Piple</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" onclick="generate()">Generate</button>
          </div>
    </div>

</div>

<script>
    function generate() {
        var option = document.getElementById("optionFile").value;
        fetch("@Url.Content("~/GeneratorFile/CreateFile")" + "?optionFile=" + option)
            .then(response => response.json())
            .then(data => {
                alert(data.message);
            });
    }
</script>